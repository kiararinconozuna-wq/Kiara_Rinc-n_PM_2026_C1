#include <stdio.h>
/* N贸mina de profesores.
El programa, al recibir como datos los salarios de los profesores de una universidad
obtiene la n贸mina y el promedio de los salarios.

I: variable de tipo entero
SAL, NOM y PRO: variable de tipo real. */

void main(void)
{
    int I = 0;
    float SAL, PRO, NOM = 0;
    printf("Ingrese el primer salario:\t");
    scanf("%f", &SAL);
    /*Observe que al menos se necesita ingresar el salario de un profesor para que
    no ocurra un error de ejecuci贸n del programa*/.
    do
    {
        NOM = NOM + SAL;
       printf("Ingrese el siguiente salario de profesor -0 para terminar- :\t");
       scanf("%f", &SAL);
       
    } 
    while (SAL);
    PRO = NOM / I;
    printf("\nN贸minal: %.2f \t promedio de salarios: %.2f", NOM, PRO);
    
}